<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:cardBackgroundColor="@android:color/transparent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Accelerometer Sensor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="26dp"
        android:backgroundTint="#6DD5FA"
        android:layout_marginTop="170dp"
        >

        <TextView
            android:id="@+id/sen_val"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Sensor Value - Accelerometer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xval"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="X"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/yval"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:text="Y"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zval"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:text="Z"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />



    </androidx.cardview.widget.CardView>





    <TextView
        android:id="@+id/upper_text"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="410dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fieldtext2"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:ems="20"
            android:gravity="center"
            android:hint="Enter any message" />
    </LinearLayout>


    <Button
        android:id="@+id/startStopButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:backgroundTint="#13AE28"
        android:text="start" />


    <TextView
        android:id="@+id/kftext1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="550dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="5sp" />

    <ToggleButton
        android:id="@+id/kfbtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="170dp"
        android:background="#FF6D00"
        android:buttonTint="#FFFFFF"
        android:text="Keyboard Features"
        android:textColor="#FEFFFF" />

    <Button
        android:id="@+id/nxt_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:text="Next Sensor Task"
        app:cornerRadius="28dp" />

</RelativeLayout>